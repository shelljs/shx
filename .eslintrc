{
  "env": {
    "node": true
  },
  "extends": "airbnb-base",
  "rules": {
    "import/no-mutable-exports": 0,
    "global-require": 0,
    "vars-on-top": 0,
    "spaced-comment": [2, "always", { "markers": ["@", "@include"], "exceptions": ["@"] }],
    "no-param-reassign": 1,
    "no-console": 0,
    "curly": 0,
    "no-var": 2,
    "prefer-const": 2,
    "new-cap": [2, {
      "capIsNewExceptions": [
        "ShellString"
      ]}
    ]
  }
}
